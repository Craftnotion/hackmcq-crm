{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "author"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "author_name": {
      "type": "string",
      "required": true
    },
    "linkedin_url": {
      "type": "string",
      "required": true
    },
    "twitter_url": {
      "type": "string",
      "required": true
    },
    "author_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "about_author": {
      "type": "text",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "author_name",
      "required": true
    },
    "blogs": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog.blog",
      "mappedBy": "author"
    }
  }
}
